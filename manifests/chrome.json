{
  "manifest_version": 3,
  "name": "goldfish-dexie",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches":[
        "*://*.wetriedtls.com/*",
        "*://*.revengernovel.com/*", 
        "*://*.fenrirealm.com/*",
        "*://*.mavintranslations.com/series/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html" 
  },
  "icons": {
    "48": "assets/goldfish-white.png",
    "128": "assets/goldfish-white.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "contextMenus"],
  "host_permissions": [
    "*://*.wetriedtls.com/*",
    "*://*.revengernovel.com/*", 
    "*://*.fenrirealm.com/*",
    "*://*.mavintranslations.com/*"
  ]
}