{
  "manifest_version": 3,
  "name": "goldfish-dexie",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches":["https://wetriedtls.com/*","https://revengernovel.com/*", "https://fenrirealm.com/*", "https://webnoveltranslations.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html" 
  },
  "icons": {
    "48": "assets/goldfish-white.png",
    "128": "assets/goldfish-white.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "contextMenus", "menus"]
}