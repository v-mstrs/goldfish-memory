{
  "manifest_version": 3,
  "name": "goldfish-dexie",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches":["https://wetriedtls.com/*","https://revengernovel.com/*", "https://fenrirealm.com/*", "https://webnoveltranslations.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html" 
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "contextMenus", "menus"],
  "browser_specific_settings": {
    "gecko": {
      "id": "goldfish-db@yourproject.com",
      "strict_min_version": "109.0"
    }
  }
}