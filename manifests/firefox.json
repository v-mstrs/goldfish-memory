{
  "manifest_version": 3,
  "name": "goldfish-dexie",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": [
        "*://*.wetriedtls.com/*",
        "*://*.revengernovel.com/*",
        "*://*.fenrirealm.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "assets/goldfish-white.png",
    "128": "assets/goldfish-white.png"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.wetriedtls.com/*",
    "*://*.revengernovel.com/*",
    "*://*.fenrirealm.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "goldfish-db@yourproject.com",
      "strict_min_version": "109.0"
    }
  }
}